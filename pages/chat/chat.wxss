.head {
  height: 200rpx;
  margin: 10rpx;
  background-color: aliceblue;
  border-radius: 5%;
  position: fixed;
  z-index: 10;
}
.head navigator {
  display: flex;
}
.head navigator .left {
  flex: 2;
  padding: 10rpx ;
}
.head navigator .left image {
  width: 200rpx;
  height: 190rpx;
  padding: 10px auto;
}
.head navigator .right {
  flex: 3;
  padding: 5px 20px;
}
.head navigator .right .title {
  font-size: 13px;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 40rpx;
}
.head navigator .right .tab {
  font-size: 10px;
  display: flex;
  margin-bottom: 0;
}
.head navigator .right .tab .school {
  flex: 1;
  padding-left: 5px;
  color: #e89025;
}
.head navigator .right .tab .price {
  flex: 1;
  font-size: medium;
  color: #f2730b;
}
.chat {
  position: fixed;
  display: flex;
  flex-direction: column;
  top: 250rpx;
  bottom: 110rpx;
}
.chat scroll-view {
  height: 100%;
  width: 100%;
}
.chat scroll-view .usera {
  float: left;
  width: 100%;
  margin-top: 20rpx;
}
.chat scroll-view .usera .top {
  height: 80rpx;
  margin-left: 50%;
  color: gray;
}
.chat scroll-view .usera .bottom {
  width: 800rpx;
  display: flex;
}
.chat scroll-view .usera .bottom .toua {
  flex: 1;
  margin-right: 20rpx;
}
.chat scroll-view .usera .bottom .toua image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.chat scroll-view .usera .bottom .content {
  flex: 4;
  background-color: #44c2e9;
  color: white;
}
.chat scroll-view .userb {
  margin-top: 20rpx;
  width: 100%;
  float: right;
}
.chat scroll-view .userb .top {
  height: 80rpx;
  margin-left: 25%;
  color: gray;
}
.chat scroll-view .userb .bottom {
  display: flex;
  width: 800rpx;
}
.chat scroll-view .userb .bottom .content {
  margin-right: 20rpx;
  flex: 4;
  background-color: #44c2e9;
  color: white;
}
.chat scroll-view .userb .bottom .toub {
  flex: 1;
}
.chat scroll-view .userb .bottom .toub image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.chat .footer {
  position: fixed;
  bottom: 5rpx;
  display: flex;
  height: 100rpx;
  width: 100%;
}
.chat .footer .left {
  flex: 5;
  margin: 5rpx 10rpx 0 0;
}
.chat .footer .left input {
  border: 1px solid #bebbbb;
  height: 90rpx;
  background: #f1eded;
}
.chat .footer .btn {
  flex: 1;
}
.chat .footer .btn button {
  margin: 20rpx 0;
  font-size: 30rpx;
  background-color: #f1eded;
}
