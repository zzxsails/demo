.con {
  display: flex;
}
.con .left {
  padding-top: 30rpx;
  flex: 1;
  font-size: 40rpx;
  border-right: 3px solid #8cdf8c;
  height: 100%;
  text-align: center;
}
.con .left .left-item {
  line-height: 80rpx;
}
.con .left .active {
  border-left: 3px solid #e7ab07;
  border-right: 3px solid #fff;
}
.con .right {
  flex: 3;
}
.con .right .goods {
  text-align: center;
}
.con .right .goods .goods_name {
  line-height: 120rpx;
}
